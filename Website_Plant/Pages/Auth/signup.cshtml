@page
@model Website_Plant.Pages.Auth.signupModel
@{
	Layout = "_AuthenticationLayout";
	ViewData["Title"] = "Đăng kí";
}

@section Styles {
	<link href="~/css//signup.css" rel="stylesheet">
}

<div class="login-box">
	<div class="img-login">
		<img src="~/image/caydk.png" alt="Ảnh đăng ký" class="" />
	</div>

	<form method="post" class="form-section">
		<h1>Đăng ký</h1>
		@if (Model.errorMessage.Length > 0)
		{
			<div class='alert alert-warning alert-dismissible fade show' role='alert'>
				<strong>@Model.errorMessage</strong>
				<button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
			</div>
		}
		else if (Model.successMessage.Length > 0)
		{
			<div class='alert alert-success alert-dismissible fade show' role='alert'>
				<strong>@Model.successMessage</strong>
				<button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
			</div>
		}
		<div class="form-section-input">
			<input id="name" type="text" asp-for="fullName" placeholder="Tên" />
			<span asp-validation-for="fullName" class="text-danger"></span>
		</div>
		<div class="form-section-input">
			<input id="email" type="text" asp-for="email" placeholder="Email" />
			<span asp-validation-for="email" class="text-danger"></span>
		</div>
		<div class="form-section-input">
			<input id="phone" type="text" asp-for="phone" placeholder="Số điện thoại" />
			<span asp-validation-for="phone" class="text-danger"></span>
		</div>
		<div class="form-section-input">
			<input id="adress" type="text" asp-for="address" placeholder="Địa chỉ" />
			<span asp-validation-for="address" class="text-danger"></span>
		</div>
		<div class="form-section-input">
			<input id="password" type="password" asp-for="password" placeholder="Mật khẩu" />
			<span asp-validation-for="password" class="text-danger"></span>
		</div>
		<div class="form-section-input">
			<input id="passwordagain" type="password" asp-for="ConfirmPassword" placeholder="Nhập lại mật khẩu" />
			<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
		</div>
	
		<button class="login-button" type="submit">Đăng ký</button>
		<div class="signup-link">
			<span>Bạn đã có tài khoản?</span> <a href="signin">Đăng nhập</a>
		</div>
	</form>

</div>