@page
@model Website_Plant.Pages.contactusModel

@section Styles {
    <link rel="stylesheet" href="~/css/contact.css" />
}

<body>
    <div class="alert-container">
        @if (Model.ErrorMessage.Length > 0)
        {
            <div class='alert alert-warning alert-dismissible fade show alert-padding alert-no-margin' role='alert'>
                <strong>@Model.ErrorMessage</strong>
                <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
            </div>
        }
        else if (Model.SuccessMessage.Length > 0)
        {
            <div class='alert alert-success alert-dismissible fade show alert-padding alert-no-margin' role='alert'>
                <strong>@Model.SuccessMessage</strong>
                <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
            </div>
        }
    </div>
    <div class="container">

        <form method="post">
            <h1>Liên hệ với chúng tôi</h1>
            <input type="text" name="fullname" id="fullname" placeholder="Họ & Tên" value="@Model.FullName" />
            

            <input type="text" name="phone" id="phone" placeholder="SĐT" value="@Model.PhoneNumber" />
            

            <input type="email" name="email" id="email" placeholder="Email" value="@Model.Email" />
            

            <textarea name="message" placeholder="Hãy viết lời nhắn ở đây nhé ❤️" value="@Model.Message"></textarea>

            <a href ="index"><input type="button" value="Trở lại" id="button" /></a>
            <input type="submit" value="Gửi đi" id="button" />
        </form>
    </div>
</body>