@section Styles {

	<style>
		body {
			margin: 0;
			padding: 0;
			height: 100%;
		}

		.page-container {
			display: flex;
			width: 100%;
			background-color: #FEF7EF;
			border-radius: 10px;
			overflow: hidden;
			margin: 0 auto;
			padding: 30px 200px;
		}

		.sidebar {
			width: 300px;
			background-color: #FEF7EF;
			padding: 30px 60px;
			display: flex;
			flex-direction: column;
			align-items: center;
			position: relative;
		}

			.sidebar::after {
				content: '';
				position: absolute;
				top: 50%;
				right: 0;
				transform: translateY(-50%);
				width: 1px;
				height: 100%;
				background-color: #BFBFBF;
			}

		.body-content {
			flex-grow: 1;
			padding: 30px 60px;
			background-color: #FEF7EF;
		}

		.profile-image-container {
			position: relative;
			width: 180px;
			height: 180px;
			margin-bottom: 30px;
		}

		.profile-image {
			width: 100%;
			height: 100%;
			border-radius: 50%;
			object-fit: cover;
		}

		.camera-icon {
			position: absolute;
			bottom: 10px;
			right: 10px;
			background-color: white;
			border-radius: 50%;
			padding: 5px;
		}

		.menu-button {
			display: flex;
			align-items: center;
			width: 100%;
			padding: 10px 18px;
			margin-bottom: 10px;
			border: 1px solid #E0E0E0;
			border-radius: 320px;
			text-align: left;
			cursor: pointer;
			font-size: 16px;
			font-weight: bold;
			color: #1F3505 !important;
			background-color: white;
			box-shadow: 0 1px 2px rgba(0,0,0,0.05);
			text-decoration: none;
		}

			.menu-button svg {
				margin-right: 8px;
			}

			.menu-button.active {
			background-color: #DEEDCD;
		}

		.form-group {
			display: flex;
			align-items: center;
			margin-bottom: 20px;
		}

			.form-group label {
				width: 140px;
				color: #1F3505;
				font-weight: 600;
			}

			.form-group input {
				flex-grow: 1;
				padding: 10px;
				border-radius: 10px;
				border-color: #ddd;
				font-size: 16px;
				background-color: transparent;
				color: #333;
			}

				.form-group input:focus {
					outline: none;
					border-color: #ddd;
				}

				.form-group input[readonly] {
					cursor: default;
				}

		.edit-button {
			background-color: #C1CEB2;
			color: #1F3505;
			border: none;
			padding: 8px 20px;
			border-radius: 20px;
			cursor: pointer;
			font-size: 16px;
			margin-top: 20px;
			font-weight: bold;
		}

			.edit-button i {
				padding-right: 8px;
			}

		h1 {
			color: #333;
			margin-bottom: 30px;
			font-weight: bold;
		}
		.Oder{
			width: 700px;
			height:570px;
			background-color: #F6F6F6;
			border-radius: 10px;
			overflow: hidden;
			box-shadow: 6px 6px 8px rgba(0, 0, 0, 0.25);
		}

		.table-order{
			border-bottom: 1px solid White;
		}
		.table{
			margin-bottom: 30px;
		}
		.table-order-total {
			border-bottom: 1px solid #BFBFBF;
			text-align: end;
			font-size: 18px;
			font-weight: 500;
			padding: 30px 20px 20px 20px!important;
		}

		.table-order-item h4 {
			font-size: 18px;
			font-weight: bold;
		}

		.table-order-item
		 {
			border-bottom: 1px solid #BFBFBF;
			padding: 20px !important; 
		}

		.mdh p{
			text-align: end;
			font-size: 18px;
			font-weight: bold;
			padding: 20px 20px 0px 20px;
			margin: 0px;
		}

		.status-text {
			color: #5A901A;
			font-size: 20px; 
			
		}

		.HY h4{
			font-size: 17px;
			padding-left: 10px;
		}

		.HY td, .mdh td{
			border-bottom: none ;
			background-color: white;
			
		}
		.tl{
			margin-bottom: 16px;
		}
		.tl a{
			font-size: 20px;
			text-decoration: none;
			color:black;

		}
		.tl i {
			margin-right: 10px; 
		}
	</style>
}
