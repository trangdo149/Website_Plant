<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/admin_style.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
    @RenderSection("Styles", required: false)
</head>
<body>
    <header class="header">
        <div class="grid">
            <nav class="header-nav">
                <ul class="header-nav-list">
                    <li class="header-nav_item">
                        <img src="/image/logo.png" alt="Logo Home Sweet Garden" width="80" height="80"/>
                    </li>
                </ul>
                <ul class="header-nav-list">
                    <li class="header-nav_item">
                        <i class="bi bi-box-arrow-left"></i>
                        <a href="#" class="header-nav-item-link">Đăng xuất</a>
                    </li>
                </ul>
            </nav>
        </div>
    </header>
    <div class="body-admin">
        <div class="grid_row">
            <div class="grid_column-2">
                <nav class="menu">
                    <div class="avatar_admin">
                        <img class="avatar_admin-image" src="/image/avatar.png" alt="Avatar Admin" width="40" height="40"/>
                        <h3>Admin</h3>
                    </div>
                    <ul class="menu-list">
                        <li class="menu-item menu-item--active">
                            <i class="menu-item--icon bi bi-grid"></i>
                            <a href="/Admin/Plant" class="menu-item_link">Quản lý sản phẩm</a>
                        </li>
                        <li class="menu-item">
                            <i class="menu-item--icon bi bi-folder"></i>
                            <a href="#" class="menu-item_link">Quản lý đơn hàng</a>
                        </li>
                        <li class="menu-item">
                            <i class="menu-item--icon bi bi-person"></i>
                            <a href="#" class="menu-item_link">Quản lý tài khoản</a>
                        </li>
                    </ul>
                    <div class="tmp"></div>
                </nav>
            </div>
            <div class="grid_column-10">
                @if (ViewData["NoContainer"] == null)
                {
                    <div class="main-content">
                        <main role="main">
                            @RenderBody()
                        </main>
                    </div>
                }
                else
                {
                    @RenderBody()
                }
            </div>
        </div>
    </div>
    <script src="~/js/admin.js"></script>
</body>
</html>
