<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Website_Plant</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Website_Plant.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
    @RenderSection("Styles", required: false)
</head>
<body>
    <header class="header">
        <div class="grid">
            <nav class="header-nav">
                <ul class="header-nav-list">
                    <li class="header-nav_item">
                        <img src="/image/logo.png" alt="Logo Home Sweet Garden" width="80" height="80" />
                    </li>
                </ul>
                <ul class="header-nav-list">
                    <li class="header-nav_item">
                        <i class="bi bi-box-arrow-left"></i>
                        <a href="#" class="header-nav-item-link">Đăng xuất</a>
                    </li>
                </ul>
            </nav>
        </div>
    </header>
    @if (ViewData["NoContainer"] == null)
    {
        <div class="main-content">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    }
    else
    {
        @RenderBody()
    }

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Website_Plant - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>